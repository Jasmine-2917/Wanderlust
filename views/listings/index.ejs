<% layout("/layouts/boilerplate") %>
<body>
  <script>
    const allListings = <%- JSON.stringify(allListings) %>;
  </script>
  <div class="category">
    <swiper-container
      class="mySwiper filter-menu"
      init="false"
      loop="true"
      navigation="true"
    >
      <swiper-slide>
        <div class="filter" data-filter-property="Trending">
          <div>
            <i class="fa-solid fa-fire"></i>
          </div>
          <p>Trending</p>
        </div>
      </swiper-slide>

      <swiper-slide>
        <div class="filter" data-filter-property="Rooms">
          <div><i class="fa-solid fa-bed"></i></div>
          <p>Rooms</p>
        </div>
      </swiper-slide>

      <swiper-slide>
        <div class="filter" data-filter-property="Iconic Cities">
          <div><i class="fa-solid fa-city"></i></div>
          <p>Iconic Cities</p>
        </div>
      </swiper-slide>

      <swiper-slide>
        <div class="filter" data-filter-property="Mountains">
          <div><i class="fa-solid fa-mountain"></i></div>
          <p>Mountains</p>
        </div>
      </swiper-slide>

      <swiper-slide>
        <div class="filter" data-filter-property="Castles">
          <div><i class="fa-brands fa-fort-awesome"></i></div>
          <p>Castles</p>
        </div>
      </swiper-slide>

      <swiper-slide>
        <div class="filter" data-filter-property="Amazing Pools">
          <div><i class="fa-solid fa-person-swimming"></i></div>
          <p>Amazing Pools</p>
        </div>
      </swiper-slide>

      <swiper-slide>
        <div class="filter" data-filter-property="Camping">
          <div><i class="fa-solid fa-tent"></i></div>
          <p>Camping</p>
        </div>
      </swiper-slide>

      <swiper-slide>
        <div class="filter" data-filter-property="Farms">
          <div><i class="fa-solid fa-cow"></i></div>
          <p>Farms</p>
        </div>
      </swiper-slide>

      <swiper-slide>
        <div class="filter" data-filter-property="Arctic">
          <div><i class="fa-regular fa-snowflake"></i></div>
          <p>Arctic</p>
        </div>
      </swiper-slide>

      <swiper-slide>
        <div class="filter" data-filter-property="Beachfront">
          <div><i class="fa-solid fa-umbrella-beach"></i></div>
          <p>Beachfront</p>
        </div>
      </swiper-slide>

      <swiper-slide>
        <div class="filter" data-filter-property="Boats">
          <div><i class="fa-solid fa-sailboat"></i></div>
          <p>Boats</p>
        </div>
      </swiper-slide>

      <swiper-slide>
        <div class="filter" data-filter-property="Play">
          <div><i class="fa-solid fa-gamepad"></i></div>
          <p>Play</p>
        </div>
      </swiper-slide>

      <swiper-slide>
        <div class="filter" data-filter-property="Skiing">
          <div><i class="fa-solid fa-person-skiing"></i></div>
          <p>Skiing</p>
        </div>
      </swiper-slide>

      <swiper-slide>
        <div class="filter" data-filter-property="Golf">
          <div><i class="fa-solid fa-golf-ball-tee"></i></div>
          <p>Golf</p>
        </div>
      </swiper-slide>

      <swiper-slide>
        <div class="filter" data-filter-property="Towers">
          <div><i class="fa-solid fa-tower-observation"></i></div>
          <p>Towers</p>
        </div>
      </swiper-slide>

      <swiper-slide>
        <div class="filter" data-filter-property="Creative Spaces">
          <div><i class="fa-solid fa-palette"></i></div>
          <p>Creative Spaces</p>
        </div>
      </swiper-slide>

      <swiper-slide>
        <div class="filter" data-filter-property="New">
          <div><i class="fa-solid fa-key"></i></div>
          <p>New</p>
        </div>
      </swiper-slide>
    </swiper-container>

    <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
        <input
          class="form-check-input"
          type="checkbox"
          role="switch"
          id="flexSwitchCheckDefault"
        />
        <label class="form-check-label" for="flexSwitchCheckDefault"
          >Display total after taxes</label
        >
      </div>
    </div>
  </div>

  <div class="row row-cols-lg-3 row-cols-md-3 mt-3 row-cols-sm-1">
    <% for (let listing of allListings) { %>
    <a
      class="listing-link listing-item <%= listing.category.replace(/\s+/g, '_').toLowerCase() %>"
      href="/listings/<%= listing._id %>"
      style="text-decoration: none; color: #000"
      data-search="<%= listing.title.toLowerCase() %> <%= listing.country.toLowerCase() %> <%= listing.location.toLowerCase() %>"
    >
      <div
        class="listing-card card col"
        data-property="<%= listing.category %>"
      >
        <img
          src="<%= listing.image.url %>"
          class="card-img-top"
          alt="listing_image"
          style="height: 20rem"
        />
        <div class="card-body">
          <p class="card-text">
            <b> <%= listing.title %> </b><br />
            &#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") :
            'N/A' %> / night
            <i class="tax-info">&nbsp; &nbsp; +18 GST</i>
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>
</body>
