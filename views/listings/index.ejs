<% layout("/layouts/boilerplate") %>

<body>
  <div class="category">
    <swiper-container
      class="mySwiper"
      init="false"
      loop="true"
      navigation="true"
    >
      <swiper-slide
        ><div class="filter">
          <div><i class="fa-solid fa-fire"></i></div>
          <p>Trending</p>
        </div></swiper-slide
      >
      <swiper-slide
        ><div class="filter">
          <div><i class="fa-solid fa-bed"></i></div>
          <p>Rooms</p>
        </div></swiper-slide
      >
      <swiper-slide
        ><div class="filter">
          <div><i class="fa-solid fa-city"></i></div>
          <p>Iconic Cities</p>
        </div></swiper-slide
      >
      <swiper-slide
        ><div class="filter">
          <div><i class="fa-solid fa-mountain"></i></div>
          <p>Mountains</p>
        </div></swiper-slide
      >
      <swiper-slide
        ><div class="filter">
          <div><i class="fa-brands fa-fort-awesome"></i></div>
          <p>Castles</p>
        </div></swiper-slide
      >
      <swiper-slide
        ><div class="filter">
          <div><i class="fa-solid fa-person-swimming"></i></div>
          <p>Amazing Pools</p>
        </div></swiper-slide
      >
      <swiper-slide
        ><div class="filter">
          <div><i class="fa-solid fa-tent"></i></div>
          <p>Camping</p>
        </div></swiper-slide
      >
      <swiper-slide
        ><div class="filter">
          <div><i class="fa-solid fa-cow"></i></div>
          <p>Farms</p>
        </div></swiper-slide
      >
      <swiper-slide
        ><div class="filter">
          <div><i class="fa-regular fa-snowflake"></i></div>
          <p>Arctic</p>
        </div></swiper-slide
      >
      <swiper-slide
        ><div class="filter">
          <div><i class="fa-solid fa-umbrella-beach"></i></div>
          <p>Beachfront</p>
        </div></swiper-slide
      >
      <swiper-slide
        ><div class="filter">
          <div><i class="fa-solid fa-sailboat"></i></div>
          <p>Boats</p>
        </div></swiper-slide
      >
      <swiper-slide
        ><div class="filter">
          <div><i class="fa-solid fa-gamepad"></i></div>
          <p>Play</p>
        </div></swiper-slide
      >
      <swiper-slide
        ><div class="filter">
          <div><i class="fa-solid fa-person-skiing"></i></div>
          <p>Skiing</p>
        </div></swiper-slide
      >
      <swiper-slide
        ><div class="filter">
          <div><i class="fa-solid fa-golf-ball-tee"></i></div>
          <p>Golf</p>
        </div></swiper-slide
      >
      <swiper-slide
        ><div class="filter">
          <div><i class="fa-solid fa-tower-observation"></i></div>
          <p>Towers</p>
        </div></swiper-slide
      >
      <swiper-slide
        ><div class="filter">
          <div><i class="fa-solid fa-palette"></i></div>
          <p>Creative Spaces</p>
        </div></swiper-slide
      >
      <swiper-slide
        ><div class="filter">
          <div><i class="fa-solid fa-key"></i></div>
          <p>New</p>
        </div></swiper-slide
      >
    </swiper-container>
    <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
        <input
          class="form-check-input"
          type="checkbox"
          role="switch"
          id="flexSwitchCheckDefault"
        />
        <label class="form-check-label" for="flexSwitchCheckDefault"
          >Display total after taxes</label
        >
      </div>
    </div>
  </div>

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-1 mt-3">
    <% for(let listing of allListings){ %>
    <a href="/listings/<%= listing._id %>" class="listing-link">
      <div class="card col" style="border: none">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top"
          alt="listing-img"
          style="height: 20rem"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <h5 class="card-title"><b><%= listing.title %></b></h5>
          <p class="card-text">
            &#x20B9;<%= listing.price.toLocaleString("en-IN")%> /night
            <i class="tax-info">&nbsp;&nbsp; +18% GST </i>
          </p>
        </div>
      </div>
    </a>

    <% } %>
  </div>
</body>
