<% layout("/layouts/boilerplate") %>

<div class="row">
  <div class="col-6 offset-3">
    <h1 class="text-center mt-3">SignUp on Wanderlust</h1>
    <form action="/signup" method="POST" class="needs-validation" novalidate>
      <div class="mt-5">
        <lable for="email" class="form-lable">Email</lable>
        <input type="email" name="email" class="form-control" required />
      </div>
      <div class="mt-3">
        <lable for="username" class="form-lable">Username</lable>
        <input type="text" name="username" class="form-control" required />
        <div class="valid-feedback">looks good!</div>
      </div>
      <div class="mt-3">
        <lable for="password" class="form-lable">Password</lable>
        <input type="password" name="password" class="form-control" required />
        <div class="valid-feedback">looks good!</div>
      </div>
      <div class="mt-5">
        <button class="btn btn-primary offset-5">Sign Up</button>
      </div>
    </form>
  </div>
</div>
